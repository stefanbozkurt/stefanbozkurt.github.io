{
  "name": "stefanbozkurt.github.io",
  "version": "1.0.0",
  "scripts": {
    "watch": "concurrently \"npm run watch:scss\" \"npm run watch:js\" \"npm run watch:html\" \"npm run watch:img\"",
    "watch:js": "nodemon --watch src/js --exec \"npm run minify-js\"",
    "watch:img": "nodemon --watch src/img --exec \"npm run copy-images\"",
    "minify-js": "terser src/js/**/*.js --compress --output dist/js/main.min.js",
    "watch:scss": "sass --watch src/css/styles.scss:dist/css/styles.min.css --style compressed --no-source-map",
    "watch:html": "npx nodemon --watch src --ext html --exec \"npm run build:html\"",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "build:html": "npx copyfiles -u 1 src/**/*.html dist/",
    "build:css": "npx clean-css-cli -o dist/css/styles.min.css src/css/styles.css",
    "build:js": "npm run minify-js",
    "copy-images": "node scripts/copy-images.js",
    "serve": "http-server dist -p 8080"
  },
  "devDependencies": {
    "browser-sync": "^3.0.3",
    "chokidar": "^4.0.1",
    "clean-css-cli": "^5.6.3",
    "concurrently": "^9.1.0",
    "copyfiles": "^2.4.1",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "sass": "^1.81.0",
    "terser": "^5.36.0"
  }
}
